<launch>
    <arg name="world" default="$(find my_simulation)/worlds/obstacle.world"/>
    <arg name="sdf" default="$(find my_simulation)/models/iris_with_depth/model.sdf"/>
    <arg name="gui" default="true"/>

    <!-- Set environment variable for Gazebo to find our models -->
    <env name="GAZEBO_MODEL_PATH" value="${GAZEBO_MODEL_PATH}:$(find my_simulation)/models"/>

    <include file="$(find px4)/launch/mavros_posix_sitl.launch">
        <arg name="world" value="$(arg world)"/>
        <arg name="sdf" value="$(arg sdf)"/>
        <arg name="gui" value="$(arg gui)"/>
        <arg name="vehicle" value="iris"/> 
        <arg name="interactive" value="true"/>
    </include>
</launch>
